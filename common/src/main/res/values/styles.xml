<resources>
    <!--布局样式-->
    <!-- 线性布局 根布局使用该样式控制左右内边距 -->
    <style name="LLRootStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
    </style>
    <!-- 线性布局 子线性布局使用-->
    <style name="LLEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>
    <!--线性布局 包裹按钮的线性布局使用-->
    <style name="LLWrapButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--TableLayout表格布局基础样式-->
    <style name="TLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">1</item>
    </style>
    <!--线性布局基础样式-->
    <style name="LLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--用于表格布局中包裹其他列-->
    <style name="LLTableRowStyle" parent="LLStyle">
        <item name="android:paddingRight">1dp</item>
    </style>
    <!--tablerow的样式-->
    <style name="TableRowStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/row_margin_top</item>
    </style>
    <!--单选按钮组样式-->
    <style name="RadioGroupStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_bottom</item>
    </style>
    <!--线性布局，用于包裹列表头与列表体，置于水平滚动视图中-->
    <style name="LLWrapList">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/divider_listview</item>
    </style>
    <!--线性布局列表头样式-->
    <style name="LLListviewHeadStyle">
        <item name="android:divider">@drawable/divider_listview</item>
        <item name="android:showDividers">middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--线性布局列表体样式-->
    <style name="LLListViewListStyle">
        <item name="android:divider">@drawable/divider_listview</item>
        <item name="android:showDividers">middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--控件样式-->
    <!-- 标签 -->
    <style name="TextViewLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <!-- 只读文本框 -->
    <style name="TextViewReadStyle">
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:editable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/edittext_read_bg</item>
    </style>
    <!--统计明细数量TextView样式-->
    <style name="TextViewRecord">
        <item name="android:orientation">horizontal</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/total_record</item>
        <item name="android:gravity">bottom|right</item>
    </style>
    <!-- 扫描编辑框 -->
    <style name="EditTextScanStyle">
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">请扫描</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/edittext_scan_bg</item>
    </style>
    <!--按钮样式-->
    <style name="ButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_shape_bg</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
    </style>
    <!-- 重置按钮 -->
    <style name="ButtonResetStyle" parent="ButtonStyle">
        <item name="android:id">@id/btReset</item>
        <item name="android:text">重置(F2)</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>
    <!-- 下一步按钮 -->
    <style name="ButtonNextStyle" parent="ButtonStyle">
        <item name="android:id">@id/btNext</item>
        <item name="android:text">下一步(F1)</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>
    <!-- 提交按钮 -->
    <style name="ButtonSubmitStyle" parent="ButtonStyle">
        <item name="android:id">@id/btSubmit</item>
        <item name="android:text">提交(F1)</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>
    <!-- 保存按钮 -->
    <style name="ButtonSaveStyle" parent="ButtonStyle">
        <item name="android:id">@id/btSave</item>
        <item name="android:text">保存(F3)</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>
    <!--单选按钮的样式-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <!--复选框样式-->
    <style name="CheckBoxStyle">
        <item name="android:layout_height">@dimen/checkbox_margin_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <!--下拉框的样式-->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--TextView的样式-->
    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--listview样式-->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/grid_line_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <!--<item name="android:listSelector">@android:color/holo_blue_bright</item>-->
        <item name="android:listSelector">#ff00ddff</item>
    </style>
    <!--horizontalScrollView样式-->
    <style name="HorizontalScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/grid_line_bg</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fillViewport">true</item>
    </style>
    <!--列表样式-->
    <style name="TextViewListStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <!--列表表头的样式-->
    <style name="TextViewListTitleStyle" parent="TextViewListStyle">
        <item name="android:background">@drawable/textview_list_head_bg</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@color/burlywood</item>-->
    </style>
    <!--列表项样式-->
    <style name="TextViewListContentStyle" parent="TextViewListStyle">
        <item name="android:background">@drawable/textview_list_content_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
    </style>
    <!--空格样式-->
    <style name="SpaceAutoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <item name="btNext" type="id">btNext</item>
    <item name="btReset" type="id">btReset</item>
    <item name="btSubmit" type="id">btSubmit</item>
    <item name="btSave" type="id">btSave</item>
</resources>
